
{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"],
      "cache": true
    },
    "deploy": {
      "dependsOn": ["build"],
      "cache": false 
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}